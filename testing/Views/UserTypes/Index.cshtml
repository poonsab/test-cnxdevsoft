@model IEnumerable<testing.AddModels.UserType>

@{
    ViewData["Title"] = "Index";
}

<h1>User Type</h1>

<button class="btn btn-success">
    <a asp-action="Create" class="text-white">Create New</a>
</button>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
    <td>
                        <button class="btn btn-warning">
                            <a class="text-white" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        </button>|
                        <button class="btn btn-primary">
                            <a class="text-white" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                </button>|
                        <button class="btn btn-danger">
                            <a class="text-white" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </button>

                    </td>
        </tr>
}
    </tbody>
</table>
